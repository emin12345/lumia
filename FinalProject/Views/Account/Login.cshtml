@using FinalProject.ViewModels;
@model LoginVM
<head>
    <link rel="stylesheet" href="~/css/login.css">

</head>
<style>




    .login-with-google-btn {
        transition: background-color .3s, box-shadow .3s;
        padding: 12px 16px 12px 42px;
        border: none;
        border-radius: 3px;
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);
        color: #757575;
        font-size: 14px;
        font-weight: 500;
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
        background-image: url(data:image/svg+xml;base64,);
        background-color: white;
        background-repeat: no-repeat;
        background-position: 12px 11px;
        &:hover

    {
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 2px 4px rgba(0, 0, 0, .25);
    }

    &:active {
        background-color: #eeeeee;
    }

    &:focus {
        outline: none;
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 2px 4px rgba(0, 0, 0, .25), 0 0 0 3px #c8dafc;
    }

    &:disabled {
        filter: grayscale(100%);
        background-color: #ebebeb;
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25);
        cursor: not-allowed;
    }














    }
</style>
<main>
    <div id="loading">
        <div class="custom-loader"></div>
    </div>
    <div class="container">
        <div class="row">
            <div class="left col-lg-6">
                <div class="image">
                    <img width="400px" src="~/images/login/account-01.webp" alt="">
                </div>
            </div>
            <div class="right col-lg-6">
                <div class="head">
                    <h6>Sign In to Our Store</h6>
                    <span>
                        Login helps speed up the checkout process
                    </span>
                </div>
                <div class="input">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="col-sm-9">
                            <div class="form-group">
                                <label  asp-for="Username">Firstname</label>
                                <input style="border: 1px #e7e7e7 solid;" asp-for="Username" class="form-control" placeholder="Username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input style="border: 1px #e7e7e7 solid;" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <div id="respons" style="float:left;width:170px" class="text-center">
                            <button style="
    border-radius: 20px; width:100%;
" class="btn btn-primary">
                                Login
                            </button>
                            
                        </div>
                        <br></br>
               
                    </form>
                </div>
                <a style="text-decoration: none;    text-decoration: none;
                      text-align: center;
                      margin-left: 54px;margin-top: 1rem;" asp-controller="Account" asp-action="Forgot">Forgot Your Password?</a>
                <span style="text-align: center;margin-left: 3rem;margin-top: 1rem;">Don't have an account?<a style="text-decoration:none;font-size: 14px;margin-left: 4px;" asp-controller="Account" asp-action="Register">Register Here</a></span>
            </div>
        </div>
    </div>
</main>