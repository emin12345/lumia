@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>

            <th>
                #
            </th>
            <th>
                Country
            </th>
            <th>
                State
            </th>

            <th>
                Date
            </th>
            <th>
                TotalPrice
            </th>
            <th>
                Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model)
        {
            <tr>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.Country
                </td>
                <td>
                    @order.State
                </td>

                <td>
                    @order.Date.ToString("dd.MMMM.yyyy HH:mm")
                </td>
                <td>
                    $@order.TotalPrice
                </td>

                @if (order.Status == null)
                {
                    <td>
                        <button class="btn btn-warning">
                            Pending
                        </button>
                    </td>
                }
                else if (order.Status == true)
                {
                    <td>
                        <button class="btn btn-success">
                            Accepted
                        </button>
                    </td>
                }
                else
                {
                    <td>
                        <button class="btn btn-danger">
                            Rejected
                        </button>
                    </td>
                }


                <td>
                    <a style="display:flex;justify-content:center;align-items:center" class="btn btn-warning" asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id">Edit</a>



                </td>
            </tr>
        }
    </tbody>
</table>
